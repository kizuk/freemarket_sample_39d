.header
  = render "shared/header"

.main-box
  .l-container-creditcard-input.clearfix
    .l-content-creditcard-input
      %section.l-chapter-container-creditcard-input
        %h2.l-chapter-head-creditcard-input クレジットカード情報入力
        %form#add-card-form.l-single-inner-creditcard-input{action: "https://www.mercari.com/jp/mypage/card/add/", "data-adyen-id" => "card-form", method: "POST", novalidate: "novalidate"}
          %input{name: "__csrf_value", type: "hidden", value: "f746e272b68d0098609d865933175847df8a7c548668cb7175a6c8cbf3dbe8ff07021c3b97861ba4c0d53fb3c0bff866315c16e1476ac43484761845ac0763eb9"}/
          .l-single-content-creditcard-input
            .form-group-creditcard
              %label{for: "payment_card_no"} カード番号
              %span.form-require 必須
              %input#payment_card_no.input-default{"data-input-type" => "card", maxlength: "19", placeholder: "半角数字のみ", type: "text", value: ""}
              %ul#card-no-error-wrapper.has-error-text
              %ul.signup-card-list
                %li
                  = image_tag 'visa.png', class: "creditcard_icon_input"
                %li
                  = image_tag 'priceless.png', class: "creditcard_icon"
                %li
                  = image_tag 'saison.png', class: "creditcard_icon_input"
                %li
                  = image_tag 'jcb.png', class: "creditcard_icon_input"
                %li
                  = image_tag 'american_express.png', class: "creditcard_icon_input"
                %li
                  = image_tag 'diners_club.png', class: "creditcard_icon_input"
                %li
                  = image_tag 'discover.png', class: "creditcard_icon_input"
            .form-group-creditcard-middle.signup-form-expire-creditcard
              %label{for: "payment_card_expire"} 有効期限
              %span.form-require 必須
              %br/
              .select-wrap
                %select#payment_card_expire_mm.select-default
                  %option{value: "01"} 01
                  %option{value: "02"} 02
                  %option{value: "03"} 03
                  %option{value: "04"} 04
                  %option{value: "05"} 05
                  %option{value: "06"} 06
                  %option{value: "07"} 07
                  %option{value: "08"} 08
                  %option{value: "09"} 09
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                %i.icon-arrow-bottom
              %span 月
              %ul#expire-mm-error-wrapper.has-error-text
              .select-wrap
                %select#payment_card_expire_yy.select-default
                  %option{value: "18"} 18
                  %option{value: "19"} 19
                  %option{value: "20"} 20
                  %option{value: "21"} 21
                  %option{value: "22"} 22
                  %option{value: "23"} 23
                  %option{value: "24"} 24
                  %option{value: "25"} 25
                  %option{value: "26"} 26
                  %option{value: "27"} 27
                  %option{value: "28"} 28
                %i.icon-arrow-bottom
              %span 年
              %ul#expire-yy-error-wrapper.has-error-text
            .form-group-creditcard-bottom
              %label{for: "payment_card_security_code"} セキュリティコード
              %span.form-require 必須
              %input#input-default-creditcard{:placeholder => "     カード背面4桁もしくは3桁の番号", type: "text", :value => ""}/
              / %input#payment_card_security_code.input-default{placeholder: "カード背面4桁もしくは3桁の番号", type: "number", value: ""}/
              %ul#security-code-error-wrapper.has-error-text
              .signup-seqcode-crditcard
                .signup-seqcode-text{"data-js" => "show-tips-toggle"}
                  %span.form-question> ?
                  カード裏面の番号とは？
              %input#user_id{name: "user_id", type: "hidden", value: "435780454"}/
              %input#encrypted_card_data{name: "encrypted_card_data", type: "hidden"}/
              %p#primary-error.has-error-text
              %input{name: "after_save_callback", type: "hidden", value: ""}/
              %button#submit-button.btn-default.btn-red{type: "button"} 追加する


