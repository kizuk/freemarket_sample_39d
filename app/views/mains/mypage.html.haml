          %li.mypage-nav-list-each
            = link_to "お知らせ", "/", class: "mypage-nav-list-item"
            %i.icon-arrow-right
          %li.mypage-nav-list-each
            = link_to "やることリスト", "/", class: "mypage-nav-list-item"
            %i.icon-arrow-right
          %li.mypage-nav-list-each
            = link_to "いいね！一覧", "/", class: "mypage-nav-list-item"
            %i.icon-arrow-right
