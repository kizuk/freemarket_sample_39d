                %option{:value => "99"} 未定
              %i.icon-arrow-bottom
            / react-empty: 79
          .form-group-item-sell
            %label
              / react-text: 82
              発送までの日数
              / /react-text
              %span.form-require 必須
            .select_wrap_item_sell
              %select.select-default
                %option{:value => ""} ---
                %option{:value => "1"} 1~2日で発送
                %option{:value => "2"} 2~3日で発送
                %option{:value => "3"} 4~7日で発送
              %i.icon-arrow-bottom
            / react-empty: 88
      / 販売価格
      .sell-content.clearfix
        %h3.sell-sub-head 販売価格(300〜9,999,999)
        %a.form-question{:href => "/jp/help_center/article/64/", :target => "_blank"} ?
        .sell-form-box
          %ul.sell-price
            %li.form-group-item-sell
              .clearfix
                %label.l-left
                  価格
                  %span.form-require 必須
                .l-middle ¥
                .l-right.sell-price-input
                  %div
                    %input.input-default{:placeholder => "例）300", :value => ""}/
            %li.clearfix
              .l-left
                / react-text: 192
                販売手数料 (10%)
                / /react-text
              .l-right -
            %li.clearfix.bold
              .l-left 販売利益
              .l-right -
