          = link_to "お知らせ", "/", class: "mypage-nav-list-item"
          %i.icon-arrow-right
        %li.mypage-nav-list-each
          = link_to "やることリスト", "/", class: "mypage-nav-list-item"
          %i.icon-arrow-right
        %li.mypage-nav-list-each
          = link_to "いいね！一覧", "/", class: "mypage-nav-list-item"
          %i.icon-arrow-right
        %li.mypage-nav-list-each
          = link_to "出品する", "/", class: "mypage-nav-list-item"
          %i.icon-arrow-right
        %li.mypage-nav-list-each
          = link_to "出品した商品 - 出品中", "/", class: "mypage-nav-list-item"
          %i.icon-arrow-right
        %li.mypage-nav-list-each
          = link_to "出品した商品 - 取引中", "/", class: "mypage-nav-list-item"
