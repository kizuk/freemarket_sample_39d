.header
  = render "shared/header"
.main-box
  .l-container.clearfix
    .l-content
      .mypage-user-icon
        %a
          %figure
            =image_tag "//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png", size: "60*60", class: "mypic"
          %h2.bold ユーザー名
          .mypage-number
            .evaluation
              評価
              .bold 0
            .solditems
              出品数
              .bold 0

  .mypage-tab-container-notification-todo
    %ul.tab.clearfix
      %li.active やることリスト
      %li お知らせ
    .area
      %ul.show
        %li.image
          = image_tag 'mercari_mypage_tab.png' ,size:"100x100" , class: "mercari-log16"
        %li.text-1 現在、やることリストはありません
      %ul
        %li.image
          = image_tag 'mercari_mypage_tab.png' ,size:"100x100" , class: "mercari-log16"
        %li.text-1 現在、お知らせはありません

  .mypage-tab-container-lower
    %ul.tab-2.clearfix
      %li.active 取引中
      %li 過去の取引

    .area-2
      %ul.show
        %li.image
          = image_tag 'mercari_mypage_tab.png' ,size:"100x100" , class: "mercari-log16"
        %li.text-2 取引中の商品がありません
      %ul
        %li.image
          = image_tag 'mercari_mypage_tab.png' ,size:"100x100" , class: "mercari-log16"
        %li.text-2 過去に取引した商品がありません

  .l-side-show
    .maypage-nav
      %ul.mypage-nav-list
        %li.mypage-nav-list-each.active
          = link_to "マイページ", "/users/:id", class: "mypage-nav-list-item active"
          %i.icon-arrow-right
